    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address, class: "form-input" %>
  </div>

  <div>
    <%= form.label :starts_at, style: "display: block" %>
    <%= form.datetime_field :starts_at, class: "form-input" %>
  </div>

  <div>
    <%= form.label :ends_at, style: "display: block" %>
    <%= form.datetime_field :ends_at, class: "form-input" %>
  </div>

  <div>
    <%= form.submit "Create Activity", class: "btn" %>
  </div>
<% end %>
